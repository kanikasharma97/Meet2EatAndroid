<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.kanikasharma.meet2eatandroid.CreateMeetup">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="52dp"
        android:text="Title"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Type" />

    <EditText
        android:id="@+id/txt_type"
        android:layout_width="200dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:inputType="text" />

    <TextView
        android:id="@+id/txt_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="25dp"
        android:text="Meetup date and Time" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView34"
        android:layout_toStartOf="@+id/textView34"
        android:text="Max number of people" />

    <NumberPicker
        android:id="@+id/maxnumber"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView34"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"></NumberPicker>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_dateTime"
        android:layout_alignBottom="@+id/txt_dateTime"
        android:layout_toEndOf="@+id/txt_title"
        android:layout_toRightOf="@+id/txt_title"
        android:text="Duration(hours)" />

    <NumberPicker
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/minnumber"
        android:layout_alignStart="@+id/minnumber"
        android:layout_below="@+id/textView9"></NumberPicker>
    <TextView
        android:id="@+id/textView34"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="Minimum number of people" />

    <NumberPicker
        android:id="@+id/minnumber"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/btn_Create"
        android:layout_alignRight="@+id/btn_Create"
        android:layout_alignTop="@+id/maxnumber"></NumberPicker>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_Description"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/txt_duration"
        android:layout_toStartOf="@+id/txt_duration"
        android:text="Description" />

    <EditText
        android:id="@+id/txt_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Create"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />


    <Button
        android:id="@+id/btn_Create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@color/darkorange"
        android:text="create"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>
