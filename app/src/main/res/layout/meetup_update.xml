<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kanikasharma.meet2eatandroid.Meetup_update">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/meetup"
        android:id="@+id/imageView9" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView9"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="9dp"
        android:text="Title"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txt_meetupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/textView16" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_meetupTitle"
        android:layout_alignStart="@+id/txt_meetupTitle"
        android:layout_below="@+id/txt_meetupTitle"
        android:layout_marginTop="9dp"
        android:text="Restaurant Name"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="8dp"
        android:text="Restaurant Name"
        android:id="@+id/txt_restaurantName" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_restaurantName"
        android:layout_alignStart="@+id/txt_restaurantName"
        android:layout_below="@+id/txt_restaurantName"
        android:layout_marginTop="22dp"
        android:text="Address"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="9dp"
        android:text="Address"
        android:id="@+id/txt_address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_address"
        android:layout_alignStart="@+id/txt_address"
        android:layout_below="@+id/txt_address"
        android:layout_marginTop="19dp"
        android:text="Timings"
        android:textColor="@color/black"
        android:id="@+id/textView18" />

    <TextView
        android:id="@+id/txt_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Description"
        android:layout_alignStart="@+id/txt_Description"
        android:layout_below="@+id/txt_timings"
        android:text="Duration"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="10dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:text="Maximum People"
        android:textColor="@color/black"
        android:id="@+id/textView35" />

    <EditText
        android:id="@+id/txt_maximumPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView35"
        android:layout_alignStart="@+id/textView35"
        android:layout_below="@+id/textView35"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/txt_maximumPeople"
        android:layout_alignStart="@+id/txt_maximumPeople"
        android:text="Minimum People"
        android:textColor="@color/black"
        android:id="@+id/textView36" />

    <EditText
        android:id="@+id/txt_minimumPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignStart="@+id/textView36"
        android:layout_alignTop="@+id/txt_restaurantName"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_minimumPeople"
        android:layout_alignStart="@+id/txt_minimumPeople"
        android:layout_below="@+id/textView19"
        android:text="Description"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txt_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView37"
        android:layout_alignStart="@+id/textView37"
        android:layout_below="@+id/textView37" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_duration"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txt_duration"
        android:layout_marginBottom="15dp"
        android:background="@color/darkorange"
        android:text="Update"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/btn_updateMeetup" />


</RelativeLayout>
