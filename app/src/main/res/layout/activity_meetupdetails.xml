<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.kanikasharma.meet2eatandroid.meetupdetails">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/meetup"
        android:id="@+id/imageView8">
    </ImageView>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_meetupTitle"
        android:layout_alignStart="@+id/txt_meetupTitle"
        android:layout_below="@+id/imageView8"
        android:text="Title"
        android:textColor="@color/black" />

    <TextView

        android:id="@+id/txt_meetupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView24"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="MEETUP TITLE"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/confirm"
        android:layout_alignLeft="@+id/txt_meetupTitle"
        android:layout_alignStart="@+id/txt_meetupTitle"
        android:text="Restaurant Name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:text="Restaurant Name" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_address"
        android:layout_alignStart="@+id/txt_address"
        android:layout_below="@+id/txt_restaurantName"
        android:layout_marginTop="13dp"
        android:text="Address"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_restaurantName"
        android:layout_alignStart="@+id/txt_restaurantName"
        android:layout_below="@+id/textView13"
        android:text="Address" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_address"
        android:layout_marginTop="17dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView15"
        android:layout_alignRight="@+id/textView15"
        android:layout_below="@+id/view"
        android:layout_marginTop="8dp"
        android:text="Timings"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/txt_meetupDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_address"
        android:layout_alignStart="@+id/txt_address"
        android:layout_below="@+id/textView14"
        android:text="Timings" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_duration"
        android:layout_alignStart="@+id/txt_duration"
        android:layout_below="@+id/txt_meetupDate"
        android:layout_marginTop="11dp"
        android:text="Duration"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_Description"
        android:layout_alignLeft="@+id/txt_Description"
        android:layout_alignStart="@+id/txt_Description"
        android:layout_marginBottom="14dp"
        android:text="Description"
        android:textColor="@color/black"
        android:id="@+id/textView26" />

    <TextView
        android:id="@+id/txt_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_meetupDate"
        android:layout_alignStart="@+id/txt_meetupDate"
        android:layout_below="@+id/txt_meetupDate"
        android:layout_marginTop="31dp"
        android:text="Duration"
        />

    <TextView
        android:id="@+id/txt_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_below="@+id/txt_duration"
        android:layout_marginTop="32dp"
        android:text="Description"
        />

    <Switch
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView24"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="Check In" />


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkin"
        android:layout_alignStart="@+id/checkin"
        android:layout_below="@+id/checkin"
        android:layout_marginTop="15dp"
        android:text="confirm"
        android:id="@+id/confirm"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirm"
        android:layout_alignStart="@+id/confirm"
        android:layout_alignTop="@+id/textView12"
        android:layout_marginTop="8dp"
        android:text="Max Number"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/maxNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_below="@+id/textView21"
        android:hint="max number "/>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/maxNumber"
        android:layout_alignStart="@+id/maxNumber"
        android:layout_below="@+id/maxNumber"
        android:text="Min Number"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/minNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView41"
        android:layout_alignStart="@+id/textView41"
        android:layout_below="@+id/textView13"
        android:hint="min number" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_Description"
        android:layout_alignStart="@+id/txt_Description"
        android:layout_below="@+id/textView26"
        android:layout_marginTop="11dp" />
</RelativeLayout>
